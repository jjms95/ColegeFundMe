<p id="notice"><%= notice %></p>

<h1>Parent Children</h1>

<br>
<br>
<%= form_tag "/search/create",method: :get, remote: true, id:"form-search" do %>
	<%= text_field_tag :keyword, nil, placeholder:"search user or email" %>
	<%= content_tag :button,type: :submit do %>
		Search
	<% end %>
<% end %>
<br>
<br>
<h2>Search Results</h2>
<div id="results">

</div>

<br>
<br>
<h2>Relationships</h2>
<table>
	<thead>
		<tr>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% if current_user.donor? %>
			<% @parent_children.each do |parent_child| %>
				<tr>
					<td><%= link_to 'Show', parent_child %></td>
					<td><%= link_to 'Destroy', parent_child, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
			<% end %>
		<% else %>
				<td><%= link_to 'Show', @parent_children %></td>
				<td><%= link_to 'Destroy', @parent_children, method: :delete, data: { confirm: 'Are you sure?' } %></td>	
		<% end %>
	</tbody>
</table>

<br>
